      if ($(this).hasClass('selected')) {
        $(this).removeClass('selected');
        $(this).next().slideUp();
      } else{
        $(".researchPortfolioCollapsibleParagraph").fadeOut();
        $('.researchPortfolioCollapsibleHeader').removeClass('selected');
        $(this).addClass('selected');
        $(this).next().slideDown();
      } 
    });
  
  function formatRightTiles (){
    $('.researchPortoflioCollapsibleContainer').removeClass('rightTile');
    $('.researchPortoflioCollapsibleContainer:visible:odd').addClass('rightTile');
  };

  formatRightTiles();

});
