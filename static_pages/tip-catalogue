function toggleInfo(divID) {
	if (document.getElementById("info-info" + divID).style.display == "block") {
		document.getElementById("info-info" + divID).style.display = "none";
		$("#info-hdr" + divID).removeClass("info-hdr-selected");
		document.images["info-toggle" + divID].src = "https://www.michaeljfox.org/images/icon-open-info.gif";
		console.log('Testing console and the id is ' + divID);
	} 
	else {
		document.getElementById("info-info" + divID).style.display = "block";
		$("#info-hdr" + divID).addClass("info-hdr-selected");
		document.images["info-toggle" + divID].src = "https://www.michaeljfox.org/images/icon-close-info.gif";
		console.log('Testing console and the id is ' + divID);
	}
}

function toggleAllNLevel(divID) {
	var count=$('#subcat'+divID).children('.info-hdr').length;
	if (document.getElementById("info-info" + divID + "-1").style.display == "block") {
		document.getElementById("info-info" + divID + "-1").style.display = "none";
		$("#info-hdr" + divID + "-1").removeClass("info-hdr-selected");
		document.images["info-toggle" + divID + "-1"].src = "/images/icon-open-info.gif";
		document.getElementById("handletoggle" + divID).innerHTML="OPEN ALL";
		for(var i=2;i<=count;i++){
			if (document.getElementById("info-info" + divID + "-" + i)) {
				document.getElementById("info-info" + divID + "-" + i).style.display = "none";
				$("#info-hdr" + divID + "-" + i).removeClass("info-hdr-selected");
				document.images["info-toggle" + divID + "-" + i].src = "/images/icon-open-info.gif";
			
			}
		}
				console.log('Testing console and the id is ' + divID);
	}
	else {
		document.getElementById("info-info" + divID + "-1").style.display = "block";
		// $("#info-hdr" + divID + "-1").addClass("info-hdr-selected");
		document.images["info-toggle" + divID + "-1"].src = "/images/icon-close-info.gif";
		document.getElementById("handletoggle" + divID).innerHTML="CLOSE ALL";
		
		for(var i=2;i<=count;i++){
			if (document.getElementById("info-info" + divID + "-" + i)) {
				document.getElementById("info-info" + divID + "-" + i).style.display = "block";
			//	$("info-hdr" + divID + "-" + i).addClass("info-hdr-selected");
				document.images["info-toggle" + divID + "-" + i].src = "/images/icon-close-info.gif";
				
			}
		}
				console.log('Testing console and the id is ' + divID);
	}
}
// ]]></script>
